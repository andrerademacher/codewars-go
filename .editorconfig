# see editorconfig spec online: https://editorconfig.org/
root = true

# for every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = off
trim_trailing_whitespace = true

# go files
[{*.go,go.mod,go.sum}]
indent_style = tab

# config files
[*.{json,yaml,yml}]
indent_size = 2